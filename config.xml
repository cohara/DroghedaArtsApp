<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.coderdojodrogheda.gameon"
    version     = "0.9.0"
    versionCode = "10" >
    
    <!-- versionCode is optional and Android only -->
    
    <preference name="phonegap-version" value="3.1.0" />
    
    <name>Game on Drogheda</name>
    
    <description>
        A guide to the Drogheda Arts Festival by CoderDojo
    </description>
    
    <author href="http://gameondrogheda.com" email="drogheda@coderdojo.com">
        Conor O'Hara'
    </author>
    <access origin="*"/>
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />


    <preference name="fullscreen" value="false"/>
    <preference name="webviewbounce" value="false"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#000000"/>

    <gap:splash src="Resources/screen/ios/screen-iphone-portrait-2x.png" />
    <gap:splash src="Resources/screen/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="Resources/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="Resources/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136" />
    
    <!-- iPhone / iPod Touch  -->
    <icon src="Resources/icon/ios/icon-57.png" />
    <icon src="Resources/icon/ios/icon-57.png" gap:platform="ios" width="60" height="60" />
    <icon src="Resources/icon/ios/icon-57-2x.png" gap:platform="ios" width="120" height="120" />



</widget>